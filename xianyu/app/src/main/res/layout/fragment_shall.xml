<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentShall">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sousuo"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/shall_tablayout"
        app:layout_constraintBottom_toBottomOf="@id/shall_tablayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/shall_tablayout"
        app:layout_constraintBottom_toBottomOf="@id/shall_tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="发帖子"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_bianhua"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/shall_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/shall_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/shall_tablayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>