<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数据网关"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/hehum"
        app:layout_constraintEnd_toStartOf="@+id/iv2"
        app:srcCompat="@mipmap/temp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv1"
        app:layout_constraintStart_toStartOf="@+id/iv1"
        app:layout_constraintTop_toBottomOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/hehum" />

    <TextView
        android:id="@+id/hehum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv2"
        app:layout_constraintStart_toEndOf="@+id/iv1"
        app:layout_constraintTop_toBottomOf="@+id/iv2" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/hehum"
        app:layout_constraintStart_toEndOf="@+id/iv2"
        app:srcCompat="@mipmap/guangzhao" />

    <TextView
        android:id="@+id/guangzhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv3"
        app:layout_constraintStart_toEndOf="@+id/iv2"
        app:layout_constraintTop_toBottomOf="@+id/iv2" />

    <ImageView
        android:id="@+id/iv_jiadian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bt1"
        app:layout_constraintEnd_toStartOf="@+id/bt1"
        app:layout_constraintTop_toTopOf="@+id/bt1"
        app:srcCompat="@mipmap/jidian" />

    <ImageView
        android:id="@+id/control_light_img_red"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/c_light_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_jiadian" />

    <ImageView
        android:id="@+id/control_light_img_white"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/c_light_off"
        app:layout_constraintStart_toEndOf="@id/control_light_img_red"
        app:layout_constraintTop_toBottomOf="@+id/iv_jiadian" />

    <ImageView
        android:id="@+id/control_light_img_green"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/c_light_off"
        app:layout_constraintStart_toEndOf="@id/control_light_img_white"
        app:layout_constraintTop_toBottomOf="@+id/iv_jiadian" />

    <ImageView
        android:id="@+id/control_light_img_yellow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@mipmap/c_light_off"
        app:layout_constraintStart_toEndOf="@id/control_light_img_green"
        app:layout_constraintTop_toBottomOf="@+id/iv_jiadian" />

    <ImageView
        android:id="@+id/control_relay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/control_light_img_yellow"
        app:layout_constraintTop_toTopOf="@+id/control_light_img_yellow"
        app:srcCompat="@mipmap/c_relay_off" />

    <ImageButton
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/c_relay_off"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/hehum"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红灯"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/control_light_img_red"
        app:layout_constraintStart_toStartOf="@+id/control_light_img_red"
        app:layout_constraintTop_toBottomOf="@+id/control_light_img_red" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="白灯"
        android:textColor="#1B93D8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/control_light_img_white"
        app:layout_constraintStart_toEndOf="@+id/control_light_img_red"
        app:layout_constraintTop_toBottomOf="@+id/control_light_img_white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绿灯"
        android:textColor="#45B97C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/control_light_img_green"
        app:layout_constraintStart_toEndOf="@+id/control_light_img_white"
        app:layout_constraintTop_toBottomOf="@+id/control_light_img_green" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄灯"
        android:textColor="#857C00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/control_light_img_yellow"
        app:layout_constraintStart_toEndOf="@+id/control_light_img_green"
        app:layout_constraintTop_toBottomOf="@+id/control_light_img_yellow" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/addmoney" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <EditText
        android:id="@+id/number"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/addmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/delmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <ImageView
        android:id="@+id/lightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/light_001"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addmoney" />

    <Button
        android:id="@+id/light_bt_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="灭"
        app:layout_constraintEnd_toStartOf="@+id/light_bt_two"
        app:layout_constraintTop_toBottomOf="@+id/lightView" />

    <Button
        android:id="@+id/light_bt_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微亮"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/lightView" />

    <Button
        android:id="@+id/light_bt_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="较亮"
        app:layout_constraintStart_toEndOf="@+id/light_bt_two"
        app:layout_constraintTop_toBottomOf="@+id/lightView" />

    <Button
        android:id="@+id/light_bt_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亮"
        app:layout_constraintStart_toEndOf="@+id/light_bt_three"
        app:layout_constraintTop_toBottomOf="@+id/lightView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>